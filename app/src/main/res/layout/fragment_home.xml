<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/white">

    <Button
        android:id="@+id/HomeTextView"
        android:text="-"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:backgroundTint="#002F6C"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Bparties"
        android:text="-"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="55mm"
        android:backgroundTint="#002F6C"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.345"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HomeTextView"
        app:layout_constraintVertical_bias="0.48" />

    <Button
        android:id="@+id/BMemberList"
        android:text="-"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="55mm"
        android:backgroundTint="#002F6C"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/HomeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473" />

</androidx.constraintlayout.widget.ConstraintLayout>